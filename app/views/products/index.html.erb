<h1>Listing products</h1>

<table>
  <tr>
    <th>Hospital</th>
    <th>Name</th>
    <th>조회수</th>
    <th>Price</th>
    <th>할인율</th>
    <th>라벨</th>
    <th>Event Start At</th>
    <th>Event Ent At</th>
    <th>Hot Event</th>
    <th>Showing Event</th>
    <th>추가 검색어</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.hospital.name %></td>
    <td><%= product.name %></td>
    <td><%= product.read_count %></td>
    <td><%= product.price %></td>
    <td><%= product.dc_rate %></td>
    <td><%= product.label %></td>
    <td><%= product.event_start_at %></td>
    <td><%= product.event_end_at %></td>
    <td><%= check_box 'product', :hot, {checked: product.hot, disabled: true} %></td>
    <td><%= check_box 'product', :show, {checked: product.show, disabled: true} %></td>
    <td><%= product.search_word %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

